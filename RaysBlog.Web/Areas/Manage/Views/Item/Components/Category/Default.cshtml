@model ValueTuple<IEnumerable<RaysBlog.Model.BlogCategory>, int, int, string>
@{
    Layout = null;
    ViewData["totalCount"] = Model.Item2;
    ViewData["pageSize"] = Model.Item3;
}
<div id="ttab">
    <table class="layui-table">
        <thead>
            <tr>
                <th>分类标题</th>
                <th style="width:130px;">管理</th>
            </tr>
        </thead>
        <tbody id="tbody1">
            @if (Model.Item1 != null || Model.Item1.Count() > 0)
            {
                var tpid = Model.Item4;//页面类型
                @foreach (var item in @Model.Item1)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>
                            <div class="layui-btn-group">
                                <a href="javascript:void(0)" class="layui-btn layui-btn-sm" onclick="del({id:@item.CategoryId,tid:@tpid,action:1})"><i class="layui-icon">&#xe642;</i>编辑</a>'
                                <a href="javascript:void(0)" class="layui-btn layui-btn-danger layui-btn-sm" onclick="del({id:@item.CategoryId,tid:@tpid,action:0})"><i class="layui-icon ">&#xe640;</i>删除</a>'
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<input type="hidden" id="pcount" value="@Model.Item2" />
<input type="hidden" id="psize" value="@Model.Item3" />

